@using CircleSpaceGeneralModels.Enums
@model List<CircleSpaceGeneralModels.Models.LayoutModel>

@{
    ViewBag.Title = "Creator";
}
<div class="row row-creator">
    <div class="col-sm-1 creator-controls-col">
        <select class="selector-headers">
            @foreach (var layoutModel in Model ?? new List<CircleSpaceGeneralModels.Models.LayoutModel>())
            {
                if (layoutModel.Type == LayoutTypes.Header)
                {
                    int id = (layoutModel.ID);
                    <option value="@id">
                        @layoutModel.LayoutTitle
                    </option>
                }
            }
        </select>

        <select title="Choose a body..." class="selector-bodies">
            @foreach (var layoutModel in Model ?? new List<CircleSpaceGeneralModels.Models.LayoutModel>())
            {
                if (layoutModel.Type == LayoutTypes.Body)
                {
                    int id = (layoutModel.ID);
                    <option value="@id">
                        @layoutModel.LayoutTitle
                    </option>
                }
            }
        </select>

        <select title="Choose a footer..." class="selector-footers">
            @foreach (var layoutModel in Model ?? new List<CircleSpaceGeneralModels.Models.LayoutModel>())
            {
                if (layoutModel.Type == LayoutTypes.Footer)
                {
                    int id = (layoutModel.ID);

                    <option value="@id">
                        @layoutModel.LayoutTitle
                    </option>
                }
            }
        </select>

    </div>

    <div id="live-preview-area" class="col-lg-1">
        <div id="headerPreview"></div>
        <div id="bodyPreview"></div>
        <div id="footerPreview"></div>
    </div>

    <div class="col-sm-1 creator-section-options">
        <div>
            <label>
                Font Color:
                <input id="fontColor" type="color" />
            </label>
            <label>
                Background Color:
                <input id="backgroundColor" type="color" />
            </label>
            <label>
                Margin Left:
                <input id="marginLeft" type="number" />
            </label>
            <label>
                Margin Right:
                <input id="marginRight" type="number" />
            </label>
            <label>
                Margin Top:
                <input id="marginTop" type="number" />
            </label>
            <label>
                Margin Bottom:
                <input id="marginBottom" type="number" />
            </label>
            <label>
                Height:
                <input id="height" type="number" />
            </label>
            <label>
                Width:
                <input id="width" type="number" />
            </label>
            <label id="radioChecks">
                Font Size:
                <label><input type="radio" name="rad0" class="fontSize" value="xx-small" >XX-Small</label>
                <label><input type="radio" name="rad0" class="fontSize" value="x-small" >X-Small</label>
                <label><input type="radio" name="rad0" class="fontSize" value="small" >Small</label>
                <label><input type="radio" name="rad0" class="fontSize" value="medium" >Medium</label>
                <label><input type="radio" name="rad0" class="fontSize" value="large" >Large</label>
                <label><input type="radio" name="rad0" class="fontSize" value="x-large" >X-Large</label>
                <label><input type="radio" name="rad0" class="fontSize" value="xx-large" >XX-Large</label>
            </label>
            <label id="radioChecks">
                Font Style:
                <label><input type="radio" name="rad1" class="fontStyle" value="normal">Normal</label>
                <label><input type="radio" name="rad1" class="fontStyle" value="italic">Italicized</label>
                <label><input type="radio" name="rad1" class="fontStyle" value="oblique">Obliqued</label>
            </label>
            <label id="radioChecks">
                Font Weight:
                <label><input type="radio" name="rad2" class="fontWeight" value="lighter">Lighter</label>
                <label><input type="radio" name="rad2" class="fontWeight" value="normal">Normal</label>
                <label><input type="radio" name="rad2" class="fontWeight" value="bold">Bold</label>
                <label><input type="radio" name="rad2" class="fontWeight" value="bolder">Bolder</label>
            </label>
            <label id="radioChecks">
                Alignment:
                <label><input type="radio" name="rad3" class="textAlign" value="left">Left</label>
                <label><input type="radio" name="rad3" class="textAlign" value="center">Center</label>
                <label><input type="radio" name="rad3" class="textAlign" value="right">Right</label>
            </label>
            <label>

            </label>
        </div>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/Scripts/creator-script.js")
}